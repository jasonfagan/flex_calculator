                               click="performAction('M-');" />
                </mx:GridItem>

                <mx:GridItem>
                    <mx:Button label="MR"
                               width="50"
                               click="performAction('MR');" />
                </mx:GridItem>

            </mx:GridRow>

            <mx:GridRow>
	            <mx:GridItem>
                    <mx:Button label="C"
                               id="clear"
                               width="50"
