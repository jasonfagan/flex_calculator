                               click="performAction('8');" />
                </mx:GridItem>

                <mx:GridItem>
                    <mx:Button label="9"
                               id="num9"
                               width="50"
                               click="performAction('9');" />
                </mx:GridItem>

                <mx:GridItem>
                    <mx:Button label="X"
                               id="opMul"
                               width="50"
                               click="performAction('*');" />
                </mx:GridItem>
            </mx:GridRow>

            <mx:GridRow>
                <mx:GridItem>
                    <mx:Button label="4"
                               id="num4"
                               width="50"
                               click="performAction('4');" />
                </mx:GridItem>

                <mx:GridItem>
                    <mx:Button label="5"
                               id="num5"
                               width="50"
                               click="performAction('5');" />
                </mx:GridItem>

                <mx:GridItem>
                    <mx:Button label="6"
                               id="num6"
                               width="50"
                               click="performAction('6');" />
                </mx:GridItem>

                <mx:GridItem>
                    <mx:Button label="-"
                               id="opSub"
                               width="50"
                               click="performAction('-');" />
                </mx:GridItem>
            </mx:GridRow>

            <mx:GridRow>
                <mx:GridItem>
                    <mx:Button label="1"
                               id="num1"
                               width="50"
                               click="performAction('1');" />
                </mx:GridItem>

                <mx:GridItem>
                    <mx:Button label="2"
                               id="num2"
                               width="50"
